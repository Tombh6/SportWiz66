
<!DOCTYPE html>
<html class="no-js" lang="zxx">
<head>
    <meta charset="utf-8" />
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*<link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.ico">//home profile picture*@
    <title style="background-color:ActiveBorder">@ViewData["Title"] -"SportWiz"</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @*//////////////////*@


    <!-- CSS here -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/assets/css/flaticon.css">
    <link rel="stylesheet" href="~/assets/css/slicknav.css">
    <link rel="stylesheet" href="~/assets/css/animate.min.css">
    <link rel="stylesheet" href="~/assets/css/magnific-popup.css">
    <link rel="stylesheet" href="~/assets/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/assets/css/themify-icons.css">
    <link rel="stylesheet" href="~/assets/css/slick.css">
    <link rel="stylesheet" href="~/assets/css/nice-select.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
</head>

<body>

    <header>
        <div class="header-area">
            <div class="main-header ">
                <!-- Admin Navigation -->
                <div class="header-top top-bg d-none d-lg-block">
                    <div class="container-fluid">
                        <div class="col-xl-12">
                            <div class="row d-flex justify-content-between align-items-center">

                                <!--Left Side Contact -->
                                <div class="header-info-left d-flex">
                                    <div class="header-info-left">
                                        <a asp-action="Index" asp-controller="Home"> <i style="color:gold;" class="fas fa-globe"></i> <font style="font-size:14px; color:gold;"> +972 0484533987 | SportWiz6@gmail.com</font></a>
                                        @*<div id="fb-root"></div>-------------*@ @*-----------facebook login------------------*@
                                        <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v10.0&appId=517523466079674&autoLogAppEvents=1" nonce="v3MLJ6CU"></script>
                                        <div class="fb-login-button" data-width="" data-size="small" data-button-type="login_with" data-layout="default" data-auto-logout-link="true" data-use-continue-as="false"></div>
                                        @*---------<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">-----------*@
                                        <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v10.0&appId=517523466079674&autoLogAppEvents=1" nonce="vZFxsSdJ"></script>
                                        <div @*style="position:fixed;top:95px;left:0px;"*@ class="fb-like" data-href="https://www.facebook.com/SportWiz-110780817861106" data-width="" data-layout="standard" data-action="like" data-size="small" data-share="true"></div>
                                        @*<div id="fb-root"></div>*@

                                        @*</a>*@
                                    </div>
                                </div>
                                <!--END: Left Side Contact -->
                                <!-- Right Side Admin Links -->
                                <div class="header-info-right">

                                    <ul>
                                        @{ if (@Context.User.Claims.FirstOrDefault(c => c.Type == "Name") == null) //if User not logged in
                                            {
                                <li class="nav-item">
                                    <a class="nav-link  atext-light" style="color:gold;" asp-area="" asp-controller="Accounts" asp-action="Login">Hello Guest</a>
                                </li> }

                                            else
                                            {
                                                if ((@Context.User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role))?.Value == "Admin") //If admin logged in
                                                {
                                <li class="nav-item">
                                    <a class="nav-link  atext-light" asp-area="" asp-controller="Accounts" asp-action="Admin">Accounts</a>
                                </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link  atext-light" asp-area="" asp-controller="Brands" asp-action="Admin">Brands</a>
                                                    </li>
                                                                        <li class="nav-item">
                                                                            <a class="nav-link  atext-light" asp-area="" asp-controller="Categories" asp-action="Admin">Categories</a>
                                                                        </li>
                                                                                            <li class="nav-item">

                                                                                                <a class="nav-link  atext-light" asp-area="" asp-controller="Products" asp-action="Admin">Products</a>
                                                                                            </li>
                                                                                                                <li class="nav-item">

                                                                                                                    <a class="nav-link  atext-light" asp-area="" asp-controller="Orders" asp-action="Admin">Orders</a>
                                                                                                                </li>
                                                                                                                                    <li class="nav-item">
                                                                                                                                        <a class="nav-link  atext-light" asp-area="" asp-controller="Locations" asp-action="Admin">Locations</a>
                                                                                                                                    </li> }
                                                                                                                                                    //Someone Logged In
                                                                                                                                    <li class="nav-item">
                                                                                                                                        <a class="nav-link  atext-light" asp-area="" asp-controller="Users" asp-action="Logout">Hello @Context.User.Claims.FirstOrDefault(c => c.Type == "Name")?.Value</a>
                                                                                                                                    </li> } }
                                    </ul>
                                </div>
                                <!--END: Right Side Admin Links -->


                            </div>
                        </div>
                    </div>
                </div>



                <!-- User Navigation -->
                <div class="header-bottom  header-sticky">
                    <div class="container-fluid">
                        <div class="row align-items-center">
                            <!-- Logo -->
                            <div class="col-xl-1 col-lg-1 col-md-1 col-sm-3">
                                <div class="logo">
                                    <a asp-controller="Home" asp-action="Index"><img src="~/images/logo.jpg" alt=""></a>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-8 col-md-7 col-sm-5">

                                <!--  Navigation Links -->
                                <div class="main-menu f-right d-none d-lg-block">

                                    <nav>
                                        <ul id="navigation">
                                            <li><a class="nav-link  atext-light" asp-controller="Home" asp-action="Index">Home</a></li>
                                            <li><a asp-controller="Products" asp-action="Index">Store</a></li>
                                            <li>
                                                <a asp-controller="Accounts" asp-action="MyAccount">My Account</a>
                                                <ul class="submenu">
                                                    <li><a asp-controller="Orders" asp-action="MyOrders">My Orders</a></li>
                                                    <li><a asp-controller="Accounts" asp-action="MyAccount">Account Details</a></li>

                                                </ul>
                                            </li>
                                            <li><a asp-controller="Locations" asp-action="Index">Contact</a></li>
                                            <li><a asp-controller="Abouts" asp-action="Index">About us</a></li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>

                            <!-- Navigator Right Side -->
                            <div class="col-xl-5 col-lg-3 col-md-3 col-sm-3 fix-card">
                                <ul class="header-right f-right d-none d-lg-block d-flex justify-content-between">
                                    <li class="d-none d-xl-block">
                                        <!-- SearchBox -->
                                        <div class="form-box f-right ">
                                            <input type="text" name="Search" id="searchBox" placeholder="Search for our products...">
                                            <div class="search-icon">
                                                <i class="fas fa-search special-tag"></i>
                                            </div>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="shopping-card">
                                            <a asp-controller="ShoppingCarts" asp-action="Index"><i class="fas fa-shopping-cart"></i></a>
                                        </div>
                                    </li>

                                    <!-- Navigator Blue Login/Logout Button -->
                                    @{ if (@Context.User.Claims.FirstOrDefault(c => c.Type == "Name") == null)
                                        {
                            <li class="d-none d-lg-block"> <a class="btn header-btn" asp-area="" asp-controller="Accounts" asp-action="Login">Sign in</a></li>
 }


                                        else
                                        {
                            <li class="d-none d-lg-block"> <a class="btn header-btn" asp-area="" asp-controller="Accounts" asp-action="Logout">Logout</a></li>
 } }


                                </ul>
                            </div>


                            <!-- Mobile Menu -->
                            <div class="col-12">
                                <div class="mobile_menu d-block d-lg-none"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Header End -->

    @RenderBody()

    <!-- Footer Start-->
    <footer>
        <div class="footer-area footer-padding">
            <div class="container">
                <div class="row d-flex justify-content-between">
                    <div class="col-xl-3 col-lg-3 col-md-5 col-sm-6">
                        <div class="single-footer-caption mb-50">
                            <div class="single-footer-caption mb-30">
                                <!-- logo -->
                                <div class="footer-logo">
                                    <a asp-controller="Home" asp-action="Index"><img src="~/images/logo.jpg" alt=""></a>
                                </div>
                                <div class="footer-tittle">
                                    <div class="footer-pera">
                                        <p>
                                            SportWiz
                                            Made for Web Applications Course
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-2 col-lg-3 col-md-3 col-sm-5">
                        <div class="single-footer-caption mb-50">
                            <div class="footer-tittle">
                                <div class="single-method mb-40">
                                    <i class="ti-user"> Quick Links</i>
                                    <ul>
                                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                                        <li><a asp-controller="Products" asp-action="Index">Store</a></li>
                                        <li><a asp-controller="Accounts" asp-action="MyAccount">My Account</a></li>
                                        <li><a asp-controller="Orders" asp-action="MyOrders">My Orders</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-2 col-lg-3 col-md-3 col-sm-5">
                        <div class="single-footer-caption mb-50">
                            <div class="footer-tittle">
                                <div class="single-method mb-40">
                                    <i class="ti-package"> Free Shipping</i>
                                    <p>We offer free shipping worldwide</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-2 col-lg-3 col-md-3 col-sm-5">
                        <div class="single-footer-caption mb-50">
                            <div class="footer-tittle">
                                <div class="single-method mb-40">
                                    <i class="ti-lock"> Security</i>
                                    <p>This website secure</p>
                                </div>
                            </div>
                        </div>
                    </div>




                </div>
                <!-- Footer bottom -->
                <div class="row">
                    <div class="col-xl-7 col-lg-7 col-md-7">
                        <div class="footer-copy-right">
                            <p>

                                Copyright &copy;
                                <script>document.write(new Date().getFullYear());</script> All rights reserved | - SportWiz - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>@*rights to.....*@

                            </p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- Footer End-->

    </footer>

    <!-- JS here -->
    <script src="~/assets/js/vendor/modernizr-3.5.0.min.js"></script>
    <!-- Jquery, Popper, Bootstrap -->
    <script src="~/assets/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <!-- Jquery Mobile Menu -->
    <script src="~/assets/js/jquery.slicknav.min.js"></script>

    <!-- Jquery Slick , Owl-Carousel Plugins -->
    <script src="~/assets/js/owl.carousel.min.js"></script>
    <script src="~/assets/js/slick.min.js"></script>

    <!-- One Page, Animated-HeadLin -->
    <script src="~/assets/js/wow.min.js"></script>
    <script src="~/assets/js/animated.headline.js"></script>
    <script src="~/assets/js/jquery.magnific-popup.js"></script>

    <!-- Scrollup, nice-select, sticky -->
    <script src="~/assets/js/jquery.scrollUp.min.js"></script>
    <script src="~/assets/js/jquery.nice-select.min.js"></script>
    <script src="~/assets/js/jquery.sticky.js"></script>

    <!-- contact js -->
    <script src="~/assets/js/contact.js"></script>
    <script src="~/assets/js/jquery.form.js"></script>
    <script src="~/assets/js/jquery.validate.min.js"></script>
    <script src="~/assets/js/mail-script.js"></script>
    <script src="~/assets/js/jquery.ajaxchimp.min.js"></script>

    <!-- Jquery Plugins, main Jquery -->
    <script src="~/assets/js/plugins.js"></script>
    <script src="~/assets/js/main.js"></script>


    <!-- SearchBox Our Project JavaScript -->
    <script src="~/js/Global.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

